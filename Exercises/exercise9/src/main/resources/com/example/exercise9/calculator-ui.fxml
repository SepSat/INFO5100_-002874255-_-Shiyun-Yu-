<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.exercise9.CalculatorController" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <TextField fx:id="displayField" GridPane.columnSpan="4"/>

    <Button text="7" onAction="#onButtonClicked" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button text="8" onAction="#onButtonClicked" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button text="9" onAction="#onButtonClicked" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Button text="/" onAction="#onButtonClicked" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

    <Button text="4" onAction="#onButtonClicked" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button text="5" onAction="#onButtonClicked" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button text="6" onAction="#onButtonClicked" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Button text="*" onAction="#onButtonClicked" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <Button text="1" onAction="#onButtonClicked" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button text="2" onAction="#onButtonClicked" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button text="3" onAction="#onButtonClicked" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <Button text="-" onAction="#onButtonClicked" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

    <Button text="0" onAction="#onButtonClicked" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button text="C" onAction="#onButtonClicked" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Button text="=" onAction="#onButtonClicked" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <Button text="+" onAction="#onButtonClicked" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
</GridPane>
